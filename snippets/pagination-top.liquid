<div class="pagination-showing">
  {% if paginate.pages > 1 %}
  {{'general.pagination.showing' | t }} {{ paginate.current_offset | plus: 1 }} - {% if paginate.next %}{{ paginate.current_offset | plus: paginate.page_size }}{% else %}{{ paginate.items }}{% endif %} {{'general.pagination.of' | t }} {{ paginate.items }} products
  {% else %}
  {{'general.pagination.showing' | t }} all {{ paginate.items }} products
  {% endif %}
</div>
