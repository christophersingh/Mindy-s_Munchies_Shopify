<li class="dropdown{% if l.active %} active{% endif %}">
  <a href="{{ l.url }}" class="dropdown-link">
    <span>{{ l.title }}</span>
  </a>
  {% if nav-link == 0 %}
  <span class="expand">
    <i class="fa fa-long-arrow-right hidden-xs"></i>
    <i class="fa fa-plus visible-xs"></i>
  </span>
  {% endif %}

  <ul class="dropdown-menu">
    {% for l in linklists[submenu].links %}
    {% include 'nav-sub-link' %}
    {% endfor %}
  </ul>
</li>