html .cart-opened{
  overflow: hidden;
}
 
.cart-opened #page-body{
  cursor: url({{'toggle_close.png' | asset_url}}), progress;
  position: relative;
  left:0px;
}
.cart-opened .header-content, .cart-opened .mobile-version{
  left: 0px;
}
body.cart-opened #page-body:before{
  background: rgba(0,0,0,0.5);
  content: "" !important;
  display: inline-block !important;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
}
.cart-sb{
  background: #fff;
  position: fixed;
  width: 300px;
  z-index: 100000;
  height: 100%;
  overflow: auto;
  top: 0px!important;
  right: 0px;  
  @include translate(300px, 0);
  @include box-shadow(0 0 0 #fff !important);
  -moz-transition: all 0.45s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  -o-transition: all 0.45s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  -webkit-transition: all 0.45s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transition: all 0.45s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  padding: 20px;
  text-align: center;
  .cart-content{
    opacity: 0;
    visibility: hidden;    
    @include CSStransition(all, 0.2s, ease-out, 0s);        
    .items {
      text-align: left;      
      padding-top: 20px;
    }
  }
  .icon-cart {
    display: inline-block;
    font-family: $font-heading;
    color: $body-title-color;
    font-size:  $size-h2;
    text-transform: capitalize;
  }
  &.opened{
    @include translate(0px, 0);    
    .cart-content{
      opacity: 1;
      visibility: visible;
    }   
  }
}

