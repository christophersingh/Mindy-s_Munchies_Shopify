{% layout settings.customer_layout %}
<div id="col-main" class="page-active">

  <div class="row">
    <div class="col-sm-6">

      <div class="customer-box">
        <div id="customer-activate">
          <h2>{{ 'customer.activate_account.title' | t }}</h2>
          <p class="note">{{ 'customer.activate_account.subtext' | t }}</p>

          <div class="form-wrapper">
            {% form 'activate_customer_password' %}

            {% if form.errors %}
            <div class="alert alert-danger">
              <button type="button" class="close" title="{{'customer.general.close' | t }}" data-dismiss="alert">Ã—</button>
              {{ form.errors | default_errors }}
            </div>
            {% endif %}

            <div class="control-wrapper">
              <label for="password">{{ 'customer.activate_account.password' | t }}</label>
              <input type="password" value="" name="customer[password]" id="customer_password" class="col-sm-12 col-xs-12 password" />
            </div>

            <div class="control-wrapper">
              <label for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
              <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="col-sm-12 col-xs-12 password" />
            </div>

            <div class="control-wrapper">
              <button class="btn btn-custom" type="submit">{{ 'customer.activate_account.submit' | t }}</button>
              <button class="btn btn-default" type="submit" name="decline" id="customer_decline">{{ 'customer.activate_account.cancel' | t }}</button>
            </div>

            {% endform %}
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
